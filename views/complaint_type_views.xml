<odoo>

    <!--    COMPLAINT.TYPE VIEWS  -->
    <record id="complaint_type_view_tree" model="ir.ui.view">
        <field name="name">complaint.type.tree</field>
        <field name="model">complaint.type</field>
        <field name="arch" type="xml">
            <tree string="Complaint Types" default_order="sequence">
                <field name="name" string="Name"/>
                <field name="sequence" optional="show"/>
            </tree>
        </field>
    </record>
    <record id="complaint_type_view_form" model="ir.ui.view">
        <field name="name">complaint.type.form</field>
        <field name="model">complaint.type</field>
        <field name="arch" type="xml">
            <form string="Complaint Type">
                <sheet>
                    <group class="mb-0 mt-4">
                        <group>
                            <field name="name" class="field_name" placeholder="e.g. No hot water"/>
                            <field name="sequence"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="complaint_type_action_main" model="ir.actions.act_window">
        <field name="name">Complaints Types</field>
        <field name="res_model">complaint.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No complaints types created yet.
            </p>

        </field>
    </record>

    <menuitem id="complaints_type_menu" name="Types" action="complaint_type_action_main"
              sequence="3" parent="real_estatex.menu_complaints_root"/>
</odoo>