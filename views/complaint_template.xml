<odoo>
    <template id="real_estatex_bloopark.complain_form" name="Submit a Complaint">
        <t t-call="website.layout">
            <t t-set="additional_title">Submit a Complaint</t>
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_title parallax s_parallax_is_fixed bg-black-50 pt24 pb24" data-vcss="001"
                         data-snippet="s_title" data-scroll-background-ratio="1">
                    <span class="s_parallax_bg oe_img_bg"
                          style="background-image: url('/web/image/website.s_banner_default_image'); background-position: 50% 0;"/>
                    <div class="o_we_bg_filter bg-black-50"/>
                    <div class="container">
                        <h1>Submit Complaint</h1>
                    </div>
                </section>
                <div class="oe_structure" id="oe_structure_complaint_form"/>
                <div id="complaint_section">
                    <section class="s_website_form pt16 pb16 o_colored_level" data-vcss="001"
                             data-snippet="s_website_form" data-name="Form">
                        <div class="container">
                            <p>
                                Please inform us about any inconvenient incident. We respond quickly!
                            </p>
                            <form id="complaint_form" action="/website/form/" method="post"
                                  enctype="multipart/form-data" class="o_mark_required" data-mark="*"
                                  data-pre-fill="true" data-success-mode="redirect"
                                  data-success-page="/your-complaint-has-been-submitted"
                                  data-model_name="complaint.ticket">
                                <div class="s_website_form_rows row s_col_no_bgcolor">
                                    <div class="mb-0 py-2 s_website_form_field col-12 s_website_form_required"
                                         data-type="char" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class="col-form-label col-sm-auto s_website_form_label"
                                                   style="width: 200px" for="complaint_1">
                                                <span class="s_website_form_label_content">Your Name</span>
                                                <span class="s_website_form_mark"> *</span>
                                            </label>
                                            <div class="col-sm">
                                                <input type="text" class="form-control s_website_form_input"
                                                       name="partner_name" required="1" data-fill-with="name"
                                                       id="complaint_1"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-0 py-2 s_website_form_field col-12 s_website_form_required"
                                         data-type="email" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class="col-form-label col-sm-auto s_website_form_label "
                                                   style="width: 200px" for="complaint_2">
                                                <span class="s_website_form_label_content">Your Email</span>
                                                <span class="s_website_form_mark"> *</span>
                                            </label>
                                            <div class="col-sm">
                                                <input type="email" class="form-control s_website_form_input"
                                                       name="partner_email" required="1" data-fill-with="email"
                                                       id="complaint_2"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-0 py-2 s_website_form_field col-12 s_website_form_model_required"
                                         data-type="char" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class="col-form-label col-sm-auto s_website_form_label "
                                                   style="width: 200px" for="complaint_3">
                                                <span class="s_website_form_label_content">Subject</span>
                                                <span class="s_website_form_mark"> *</span>
                                            </label>
                                            <div class="col-sm">
                                                <input type="text" class="form-control s_website_form_input"
                                                       name="name" required="true" id="complaint_3"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-0 py-2 s_website_form_field col-12" data-type="char"
                                         data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class="col-form-label col-sm-auto s_website_form_label "
                                                   style="width: 200px" for="complaint_4">
                                                <span class="s_website_form_label_content">Description</span>
                                                <span class="s_website_form_mark"> *</span>
                                            </label>
                                            <div class="col-sm">
                                                <textarea type="text" class="form-control s_website_form_input"
                                                          name="description" id="complaint_4" rows="5" required="true"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="s_website_form_field mb-3 col-12 s_website_form_custom"
                                         data-type="binary" data-name="Field" data-visibility-condition=""
                                         data-visibility-between="">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class="col-form-label col-sm-auto s_website_form_label "
                                                   style="width: 200px" for="complaint_5">
                                                <span class="s_website_form_label_content">Complaint Type</span>
                                            </label>
                                            <div class="col-sm">
                                                <select class="form-select s_website_form_input" name="Custom Text"
                                                        id="complaint_5" style="">
                                                    <option value="option_general_question">General Question</option>
                                                    <option value="option_billing_issue">Billing Issue</option>
                                                    <option value="option_electrical_or_heating_issue">Electrical or
                                                        Heating Issue</option>
                                                    <option value="option_property_condition">Property Condition and
                                                        Maintenance</option>
                                                    <option value="option_neighborhood">Neighborhood and
                                                        Environment</option>
                                                    <option value="option_additional_services">Additional Services and
                                                        Networking</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-0 py-2 s_website_form_field col-12 s_website_form_custom"
                                         data-type="binary" data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class=" col-sm-auto s_website_form_label " style="width: 200px"
                                                   for="complaint_6">
                                                <span class="s_website_form_label_content">Attachment</span>
                                            </label>
                                            <div class="col-sm">
                                                <input type="file" class="form-control s_website_form_input"
                                                       name="Attachment" id="complaint_6"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-0 py-2 s_website_form_field col-12 s_website_form_dnone"
                                         data-name="Field">
                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                            <label class="col-form-label col-sm-auto s_website_form_label"
                                                   style="width: 200px">
                                                <span class="s_website_form_label_content"/>
                                            </label>
                                            <div class="col-sm">
                                                <input type="hidden" class="form-control s_website_form_input"
                                                       id="complaint_7"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-0 py-2 col-12 s_website_form_submit" data-name="Submit Button">
                                        <div style="width: 200px;" class="s_website_form_label"/>
                                        <a href="#" role="button"
                                           class="btn btn-primary btn-lg s_website_form_send o_default_snippet_text">
                                            Submit</a>
                                        <span id="s_website_form_result"/>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </t>

    </template>
    <data>
        <record id="complain_page" model="website.page">
            <field name="url">/complain</field>
            <field name="is_published">True</field>
            <field name="view_id" ref="complain_form"/>
            <field name="track">True</field>
        </record>

        <record id="menu_complain" model="website.menu">
            <field name="name">Complain</field>
            <field name="url">/complain</field>
            <field name="page_id" ref="real_estatex_bloopark.complain_page"/>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">60</field>
        </record>
    </data>
</odoo>